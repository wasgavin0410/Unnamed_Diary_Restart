<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gavin.unnamed_diary.writingPage">

    <EditText
        android:id="@+id/printing"
        android:lines="8"
        android:minLines="6"
        android:gravity="top|left"
        android:layout_height="wrap_content"

        android:inputType="textMultiLine"
        android:maxLines="20"
        android:scrollbars="vertical"

        android:hint="Diary"
        android:layout_width="match_parent" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="INSERT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/printing"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="223dp"
        android:layout_height="260dp"

        android:layout_marginTop="240dp"
        app:layout_constraintTop_toBottomOf="@+id/printing"
        app:srcCompat="@drawable/some"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <!--scrollbars垂直滾動條 --><!--singleLine實現多行 --><!--maxLines最多不超過20行 -->
</android.support.constraint.ConstraintLayout>
